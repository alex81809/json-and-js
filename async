<!DOCTYPE html>
<html>
    <head>
        <title>Async/Await</title>
    </head>

    <body>
        <h1 id="result"></h1>

        <script>
            async function codingal(x, y) {
                var result = await x + y

                display(result)
            }

            function display(result) {
                document.getElementById("result").innerHTML = result
            }

            codingal(30, 40)
        </script>
    </body>
</html>
